<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <form class="reg-page" action="/Account/Login" method="POST">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="reg-header">
                    <h2>Login to your account</h2>
                </div>

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-user"></i></span>
                    <input data-val="true" id="UserName" name="UserName" type="text" value="" placeholder="UserName" class="form-control" required />
                </div>
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-lock"></i></span>
                    <input data-val="true" id="Password" name="Password" type="password" placeholder="Password" class="form-control" required />
                </div>

                <div class="row">
                    @*<div class="col-md-6">
                        <input data-val="true" id="RememberMe" name="RememberMe" type="checkbox" value="true" /><input name="RememberMe" type="hidden" value="false" />
                        <label class="checkbox" for="RememberMe">Remember me?</label>

                    </div>*@
                    <div class="col-md-6">
                        <label class="checkbox" for="RememberMe"><input data-val="true" id="RememberMe" name="RememberMe" type="checkbox" value="true" /> Stay signed in</label>
                    </div>
                    <div class="col-md-6">
                        <button class="btn-u pull-right" type="submit">Login</button>
                    </div>
                </div>

                <hr>

                <h4>Forget your Password?</h4>

                <p><a class="color-green" href="/Account/ForgotPassword">click here</a> to reset your password.</p>
                <h4>Forget your Username?</h4>

                <p><a class="color-green" href="/Account/ForgotUsername">click here</a> to retrieve your user name.</p>
            </form>
        </div>
    </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->




