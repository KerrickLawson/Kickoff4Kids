@model Kickoff4Kids420.Models.Category

@{
    ViewBag.Title = "Delete";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Delete Category</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class=" panel-heading">
            <h2 class="panel-title">Delete</h2>
        </div>
        <div class="panel-body">
            <h4>Are you sure you want to delete this Category?</h4>
            <legend></legend>
            <form role="form">
                <fieldset>
                    <div class="form-group">
                        <div class="display-label">
                          <strong>@Html.DisplayNameFor(model => model.CategoryName)</strong>
                        </div>
                        <div class="display-field margin-bottom-10">
                            @Html.DisplayFor(model => model.CategoryName)
                        </div>
                    </div>
                </fieldset>
            </form>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input class="btn-u btn-u-red" type="submit" value="Delete" />
                    
                </p>
                <div>
                    @Html.ActionLink("Back to Product Categories", "Index")
                </div>
            }
        </div>
    </div>
</div>