@model Kickoff4Kids420.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}
<h3>
    <em>Review</em> your cart:
</h3>
@Html.ActionLink("Back to Products", "Index", "Product")
<div id="update-message">
</div>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in
        Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                @Html.ActionLink(item.Product.ProductName,
                    "Details", "Product", new { id = item.ProductId }, null)
            </td>
            <td>
                @item.Product.Price
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>
                
                <a href="#" class="RemoveLink"
                   data-id="@item.RecordId">
                    Remove
                    from cart
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
        
    </tr>
</table>
<p class="btn btn-large" id="purchaseBtn">
    @Html.ActionLink("Purchase", "Payment", "Checkout")
</p>
<h3>@Model.UserName, Your current point total is: <span id="studentPointTotal">@Model.PointTotal</span></h3>
<p id="warning-message" class="lead red"></p>

@section scripts
{
    @Scripts.Render("~/bundles/custom")
}

