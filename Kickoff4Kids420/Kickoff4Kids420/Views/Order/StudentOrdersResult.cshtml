@model IEnumerable<Kickoff4Kids420.Models.Order>

@{
    ViewBag.Title = "Student Orders";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Student Orders</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red margin-bottom-40">
        <div class="panel-heading">
            <h1 class="panel-title">Orders for @User.Identity.Name</h1>
        </div>
        <br />
        <table class="table table-bordered table-hover table-striped">
            <tr><th>
                First Name
                </th>
                <th>
                    Last Name
                    @*
                        @Html.DisplayNameFor(model => model.LastName)
                    *@
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Fulfilled?
                </th>
                <th>
                    Details
                </th>
                
            </tr>

            @foreach (var item in Model.Where(item => item.UserName.ToLower() == User.Identity.Name.ToLower()))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsFulfilled)
                    </td>
                    <td>
                        @Html.ActionLink("Product Details", "Details", "OrderDetail", new { id = item.OrderId }, null) 

                    </td>
                </tr>
            }

        </table>

    </div>
</div>
