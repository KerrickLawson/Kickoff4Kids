@model Kickoff4Kids420.Models.Order

@{
    ViewBag.Title = "Delete";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Are you sure you want to delete this?</h1>
    </div>
</div>
<div class="container">

    <div class="container">
        <div class="headline"><h2>Order #@Model.OrderId</h2></div>
        <dl>
            <dt>UserName</dt>
            <dd>@Html.DisplayFor(model => model.FirstName)</dd>
            <dt>Product Name</dt>
            <dd>@Html.DisplayFor(model => model.LastName)</dd>
            <dt>Quantity</dt>
            <dd>@Html.DisplayFor(model => model.OrderDate)</dd>
        </dl>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</div>
