@model Kickoff4Kids420.Models.Activity

@{
    ViewBag.Title = "Delete";
}
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Delete Activity</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class="panel-heading">
            <h2 class="panel-title">Delete</h2>
        </div>
        <div class=" panel-body">
            <h4>Are you sure you want to delete this Activity?</h4>
            <form role="form">
                <fieldset>

                    <legend></legend>
                    <div class=" form-group">
                        <div class="display-label">
                           <strong> @Html.DisplayNameFor(model => model.ActivityName)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.ActivityName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                          <strong>  @Html.DisplayNameFor(model => model.Description)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                           <strong> @Html.DisplayNameFor(model => model.PointValue)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.PointValue)
                        </div>
                    </div>

                </fieldset>
            </form>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input class="btn-u btn-u-red" type="submit" value="Delete" />
                </p>
                 <p>

                     @Html.ActionLink("Back to Current Activities", "Index")
                 </p>
            }
        </div>
    </div>
</div>