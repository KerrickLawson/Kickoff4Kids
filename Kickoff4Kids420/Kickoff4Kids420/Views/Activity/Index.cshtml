@model IEnumerable<Kickoff4Kids420.Models.Activity>

@{
    ViewBag.Title = "Index";
}
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Currently Eligible Activities</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class="panel-heading">
            <h2 class="panel-title">Current Activities</h2>
        </div>

        <div class=" span2">
            <p class="icon-plus-sign">
                @Html.ActionLink("Add Activity", "Create")
            </p>
        </div>
        <div class="span8">
            <table class="table table-bordered table-hover table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ActivityName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PointValue)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActivityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PointValue)
                        </td>
                        <td class="span2">
                            @Html.ActionLink(" ", "Edit", new { id = item.ActivityId }, new { @class = "icon-edit" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.ActivityId }, new { @class = "icon-trash" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>