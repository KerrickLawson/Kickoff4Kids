@model Kickoff4Kids420.Models.ActivityTransaction

@{
    ViewBag.Title = "Delete";
}
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Delete Activity Transaction</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class=" panel-heading">
            <h2 class="panel-title">Delete</h2>
        </div>
        <div class="panel-body">
            <h4>Are you sure you want to delete this Activity Transaction?</h4>
            <form role="form">
            <fieldset>
                <legend></legend>

                <div class="form-group">
                    <div class="display-label">
                        <strong> @Html.DisplayNameFor(model => model.UserProfiles.UserName)</strong>
                    </div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.UserProfiles.UserName)
                    </div>
               </div>

                <div class="form-group">
                    <div class="display-label">
                        <strong> @Html.DisplayNameFor(model => model.ActivityDate)</strong>
                                </div>
                                <div class="display-field">
                                    @Html.DisplayFor(model => model.ActivityDate)
                                            </div>
                                        </div>

                <div class="form-group">
                    <div class="display-label">
                        <strong>@Html.DisplayNameFor(model => model.Activity.ActivityName)</strong>
                                </div>
                                <div class="display-field">
                                    @Html.DisplayFor(model => model.Activity.ActivityName)
                                            </div>
                                        </div>
            </fieldset>
                </form>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input class="btn-u btn-u-red" type="submit" value="Delete" />
                    </p>
                <p>
                    @Html.ActionLink("Back to Completed Activities", "Index")
                </p>
            }
        </div>
    </div>
</div>
