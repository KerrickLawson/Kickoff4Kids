@model Kickoff4Kids420.Models.UserProfile

@{
    ViewBag.Title = "Delete";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Delete User</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class="panel-heading">
            <h2 class="panel-title">Delete</h2>
        </div>
        <div class="panel-body">
            <h4>Are you sure you want to delete this User?</h4>
            <form role="form">
                <fieldset>
                    <legend></legend>
                    
                    <div class="form-group">
                        <div class="display-label">
                            <strong> @Html.DisplayNameFor(model => model.UserName)</strong> 
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                          <strong>  @Html.DisplayNameFor(model => model.FirstName)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                           <strong> @Html.DisplayNameFor(model => model.LastName)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                            <strong>   @Html.DisplayNameFor(model => model.Schools.SchoolName) </strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Schools.SchoolName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="display-label">
                           <strong> @Html.DisplayNameFor(model => model.EmailAddress)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.EmailAddress)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>  @Html.DisplayNameFor(model => model.PointTotal)</strong> 
                        </div>
                        <div class="display-field margin-bottom-10">
                            @Html.DisplayFor(model => model.PointTotal)
                        </div>
                    </div>

                </fieldset>
            </form>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input class="btn-u btn-u-red" type="submit" value="Delete">
                </p>

                <p>
                    @Html.ActionLink("Back to Students", "Index")
                </p>
                
            }
        </div>
    </div>
</div>
