@model Kickoff4Kids420.Models.School

@{
    ViewBag.Title = "Delete";
}
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Delete School</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-red">
        <div class="panel-heading">
            <h2 class="panel-title">Delete</h2>
        </div>
        <div class=" panel-body">
            <h4>Are you sure you want to delete this School?</h4>
            <form role="form">
                <fieldset>

                    <legend></legend>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>@Html.DisplayNameFor(model => model.SchoolName)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.SchoolName)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong> @Html.DisplayNameFor(model => model.SchoolAddress)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.SchoolAddress)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>@Html.DisplayNameFor(model => model.City)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.City)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>@Html.DisplayNameFor(model => model.State)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.State)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>@Html.DisplayNameFor(model => model.ZipCode)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.ZipCode)
                        </div>
                    </div>
                    <div class=" form-group">
                        <div class="display-label">
                            <strong>@Html.DisplayNameFor(model => model.PhoneNumber)</strong>
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </div>
                    </div>
                </fieldset>
            </form>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input class="btn-u btn-u-red" type="submit" value="Delete" />
                </p>
                <p>
                    @Html.ActionLink("Back to Schools", "Index")
                </p>
            }
        </div>
    </div>
</div>