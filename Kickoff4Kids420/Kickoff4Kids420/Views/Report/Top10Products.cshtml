@model IEnumerable<Kickoff4Kids420.ViewModels.ProductReportViewModel>

@{
    ViewBag.Title = "Top 10 Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Top 10 Products</h1>
    </div>
</div>
<div class="container">
<div class="panel panel-red">
    <div class="panel-heading">
        <h1 class="panel-title">Top Products</h1>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrderedCount)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductOrderedCount)
                </td>

            </tr>
        }

    </table>
</div>
</div>
