@model IEnumerable<Kickoff4Kids420.ViewModels.ReportViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">School Points Report</h1>
    </div>
</div>
<div class="container">
<div class="panel panel-red">
    <div class="panel-heading">
        <h1 class="panel-title">School Points</h1>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Total_Unspent_Student_Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Accumulated_Student_Points)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_Unspent_Student_Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_Accumulated_Student_Points)
                </td>
            </tr>
        }

    </table>
</div>
</div>
